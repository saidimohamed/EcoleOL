<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.ecole.models.Eleve" table="eleve">
  <id column="matricule_eleve" name="matricule_eleve" type="string"/>
  <property column="nom" generated="never" lazy="false" name="nom" type="string"/>
  <property column="prenom" generated="never" lazy="false" name="prenom" type="string"/>
  <property column="date_naissance" generated="never" lazy="false"
   name="date_naissance" type="date"/>
  <property column="sexe" generated="never" lazy="false" name="sexe" type="string"/>

 
 </class>
</hibernate-mapping>
