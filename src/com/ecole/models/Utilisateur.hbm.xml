<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.ecole.models.Utilisateur" table="utilisateur">
  <id column="id_utilisateur" name="id_utilisateur" type="string"/>
  <property column="nom" name="nom" type="string"/>
  <property column="prenom" name="prenom" type="string"/>
  <property column="date_naissance" name="date_naissance" type="date"/>
  <property column="adresse" name="adresse" type="string"/>
  <property column="tel" name="tel" type="string"/>
  <property column="fonction" name="fonction" type="string"/>
  <property column="role" name="role" type="string"/>
  <property column="sexe" name="sexe" type="string"/>
  <property column="cin" name="cin" type="string"/>
 </class>
</hibernate-mapping>
